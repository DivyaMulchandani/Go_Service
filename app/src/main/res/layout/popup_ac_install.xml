<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/install_ac"
        android:layout_width="72dp"
        android:layout_height="30dp"
        android:text="@string/install1"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/warranty"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_below="@+id/install_ac"
        android:text="@string/_30_days_warranty"
        android:layout_marginStart="12dp"
        android:textColor="#0CB951"
        android:textSize="14sp"
        />
    <ImageView
        android:id="@+id/service_ac"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/install1"
        android:layout_marginStart="302dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/xyz"/>
    <ImageView
        android:id="@+id/star"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@+id/warranty"
        android:src="@drawable/group"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"/>
    <TextView
        android:id="@+id/rate"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_below="@+id/warranty"
        android:layout_marginTop="6dp"
        android:layout_marginStart="5dp"
        android:text="4.75"
        android:layout_toRightOf="@+id/star"
        android:textColor="@color/black"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="@string/price"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:layout_below="@+id/warranty"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"/>
    <ImageView
        android:id="@+id/install_rupee"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_below="@+id/warranty"
        android:layout_toRightOf="@+id/price"
        android:src="@drawable/rupee_ac"
        android:layout_marginStart="4dp"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:id="@+id/price_rate"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_below="@+id/warranty"
        android:layout_marginTop="24dp"
        android:layout_marginStart="14dp"
        android:text="4.75"
        android:layout_toRightOf="@+id/price"
        android:textColor="@color/black"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/ac_text1"
        android:layout_width="176dp"
        android:layout_height="30dp"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_below="@+id/warranty"
        android:layout_marginTop="55dp"
        android:layout_marginStart="12dp"
        android:text="@string/installation_of_indoor_outdoor_units_with_free_gas_check"/>
    <TextView
        android:id="@+id/ac_text2"
        android:layout_width="167dp"
        android:layout_height="15dp"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:layout_below="@+id/warranty"
        android:layout_marginTop="93dp"
        android:layout_marginStart="12dp"
        android:text="@string/procurement_of_spare_at_extra_cost"/>

    <Button
        android:id="@+id/add_ac"
        android:layout_width="38dp"
        android:layout_height="22dp"
        android:layout_marginStart="328dp"
        android:layout_marginTop="110dp"
        android:background="@color/white"
        android:text="@string/add1"
        android:textAllCaps="false"
        android:textColor="#6E4CCD"
        android:textSize="16sp"
        tools:ignore="TouchTargetSizeCheck" />

</RelativeLayout>