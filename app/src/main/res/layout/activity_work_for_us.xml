<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#f5f5f5"
    tools:context=".WorkForUsActivity">

    <RelativeLayout
        android:id="@+id/work_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/join_us_"
            android:layout_width="159dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:background="@color/black"
            android:text="Join Us"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/work_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/join_us_"
            android:layout_marginTop="21dp"
            android:src="@drawable/person" />

        <TextView
            android:id="@+id/flexibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_image"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="542dp"
            android:text="@string/work_for_us_1"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/work_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flexibility"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/work_image2"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:src="@drawable/work2" />

            <TextView
                android:id="@+id/work_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/work_image2"
                android:text="@string/work_for_us2"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                />

            <ImageView
                android:id="@+id/orange_text"
                android:layout_width="188dp"
                android:layout_height="549dp"
                android:layout_below="@+id/work_image2"
                android:src="@drawable/orange" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>