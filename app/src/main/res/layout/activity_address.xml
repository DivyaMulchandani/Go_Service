<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".AddressActivity">

    <EditText
        android:id="@+id/search_loc"
        android:layout_width="400dp"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="59dp"
        android:layout_marginRight="20dp"
        android:autofillHints="Address"
        android:background="@drawable/rect_background"
        android:hint="@string/search_for_your_location_society_apartment"
        android:inputType="text"
        android:paddingStart="70dp"
        android:textColor="@color/black"
        android:textSize="11sp"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/arrow"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="71dp"
        android:contentDescription="@string/arrow"
        android:src="@drawable/arrow"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/crosshairs"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/search_loc"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/crosshairs_image"
        android:src="@drawable/crosshairs"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/use_current"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:layout_below="@+id/search_loc"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/crosshairs"
        android:text="@string/use_current_location"
        android:textColor="#6E4CCD"
        android:textSize="13sp" />

    <View
        android:id="@+id/rectangle_5"
        android:layout_width="411dp"
        android:layout_height="8dp"
        android:layout_below="@+id/use_current"
        android:layout_marginTop="18dp"
        android:background="#D9D9D9" />

    <Button
        android:id="@id/add_new_add"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@id/rectangle_5"
        android:backgroundTint="#f5f5f5"
        android:drawableStart="@drawable/plus"
        android:drawablePadding="10dp"
        android:text="@string/add_new_address"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="13sp"
        tools:ignore="TouchTargetSizeCheck"
        />

    <View
        android:id="@+id/line_4"
        android:layout_width="411dp"
        android:layout_height="1dp"
        android:layout_below="@+id/add_new_add"
        android:background="@drawable/xml_line4" />

    <View
        android:id="@+id/rectangle_6"
        android:layout_width="411dp"
        android:layout_height="30dp"
        android:layout_below="@+id/add_new_add"
        android:layout_marginTop="2dp"
        android:background="#D9D9D9" />

    <TextView
        android:id="@+id/default_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_new_add"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="9dp"
        android:text="@string/default_address"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name_1"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/rectangle_6"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="8dp"
        android:text="@string/poojan_prajapati"
        android:textColor="#CF000000"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addr_1_line_1"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/name_1"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="15dp"
        android:text="@string/c_31_pramukh_swami_tirth_society_nr_narayanwadi_atladara"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/addr_1_line_2"
        android:layout_width="101dp"
        android:layout_height="15dp"
        android:layout_below="@+id/addr_1_line_1"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="2dp"
        android:text="@string/vadodara_390012"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/addr_1_line_3"
        android:layout_width="41dp"
        android:layout_height="15dp"
        android:layout_below="@id/addr_1_line_2"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="2dp"
        android:text="@string/gujarat"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <View
        android:id="@+id/line_5"
        android:layout_width="411dp"
        android:layout_height="1dp"
        android:layout_below="@+id/addr_1_line_3"
        android:layout_marginTop="11dp"
        android:background="@drawable/xml_line4" />

    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/edit"
            android:layout_width="199dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#f5f5f5"
            android:text="@string/edit"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/black" />

        <Button
            android:id="@+id/remove"
            android:layout_width="199dp"
            android:layout_height="45dp"
            android:layout_marginLeft="2dp"
            android:backgroundTint="#f5f5f5"
            android:text="@string/remove"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <View
        android:id="@+id/line_6"
        android:layout_width="411dp"
        android:layout_height="1dp"
        android:layout_below="@+id/linear_1"
        android:background="@drawable/xml_line4" />

    <View
        android:id="@+id/rectangle_7"
        android:layout_width="411dp"
        android:layout_height="30dp"
        android:layout_below="@+id/line_6"
        android:background="#D9D9D9" />

    <TextView
        android:id="@+id/other_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_6"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:text="@string/other_addresses"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name_2"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/rectangle_7"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="8dp"
        android:text="@string/poojan_prajapati"
        android:textColor="#CF000000"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addr_2_line_1"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/name_2"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="15dp"
        android:text="@string/c_31_pramukh_swami_tirth_society_nr_narayanwadi_atladara"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/addr_2_line_2"
        android:layout_width="101dp"
        android:layout_height="15dp"
        android:layout_below="@+id/addr_2_line_1"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="2dp"
        android:text="@string/vadodara_390012"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/addr_2_line_3"
        android:layout_width="41dp"
        android:layout_height="15dp"
        android:layout_below="@id/addr_2_line_2"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="2dp"
        android:text="@string/gujarat"
        android:textColor="@color/black"
        android:textSize="11sp" />



</RelativeLayout>