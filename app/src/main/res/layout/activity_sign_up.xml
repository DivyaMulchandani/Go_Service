<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".sign_up">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="844dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="273dp"
            android:layout_height="170dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="117dp"
            android:src="@drawable/image" />

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="91dp"
            android:layout_height="29dp"
            android:layout_below="@+id/logo"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="322dp"
            android:gravity="center_horizontal|top"
            android:text="@string/sign_up"
            android:textColor="#D9000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/already_hav"
            android:layout_width="129dp"
            android:layout_height="21dp"
            android:layout_below="@id/sign_up"
            android:layout_marginLeft="253dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:text="@string/already_have_an_account"
            android:textColor="#B326A69A"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="370dp"
            android:layout_height="48dp"
            android:layout_below="@+id/sign_up"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/et_background"
            android:hint="@string/enter_name"
            android:paddingStart="10.19dp"
            android:paddingEnd="10.71dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="15sp"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="370dp"
            android:layout_height="48dp"
            android:layout_below="@id/et_name"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_background"
            android:hint="@string/enter_email"
            android:paddingStart="10.19dp"
            android:paddingEnd="10.71dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="15sp"
            android:inputType="textEmailAddress"/>


        <EditText
            android:id="@+id/et_pass"
            android:layout_width="370dp"
            android:layout_height="48dp"
            android:layout_below="@+id/et_email"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_background"
            android:hint="@string/enter_password"
            android:paddingStart="10.19dp"
            android:paddingEnd="10.71dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="15sp"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/et_conf_pass"
            android:layout_width="370dp"
            android:layout_height="48dp"
            android:layout_below="@+id/et_pass"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_background"
            android:hint="Confirm Password"
            android:paddingStart="10.19dp"
            android:paddingEnd="10.71dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="15sp"
            android:inputType="textPassword"/>

        <CheckBox
            android:id="@+id/show_pass"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_below="@+id/et_conf_pass"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="14.8dp"
            android:text="Show Password"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_below="@+id/show_pass"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="23dp"
            android:backgroundTint="@color/black"
            android:text="@string/sign_up"
            android:textColor="#FFFFFF"
            app:cornerRadius="100dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_signup"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="24dp"

            >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By continuing,you agree to Appâ€™s"
                android:textColor="#B3000000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv1"
                android:text=" Conditions of Use"
                android:textColor="#B326A69A"
                android:textSize="11sp"

                />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv2"
                android:text=" and "
                android:textColor="#B3000000"
                android:textSize="11sp"

                />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:text="Privacy Notice."
                android:textColor="#B326A69A"
                android:textSize="11sp"


                />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>